<%- include('partials/header');%>
<%- include('partials/navbar') %>

<div class="container-fluid">
    <form action="/register" method="POST">
        <div class="container p-5">
            <div class="row">
                <div class="form-group col-lg-6 col-md-6 col-sm-12">
                    <label for="exampleInputFirstName">First Name</label>
                    <input type="text" name='firstName' class="form-control" id="exampleInput" aria-describedby="nameHelp" placeholder="Enter First Name">
                </div>
                <div class="form-group col-lg-6 col-md-6 col-sm-12">
                    <label for="exampleInputLastName">Last Name</label>
                    <input type="text" name='lastName' class="form-control" id="exampleInput" aria-describedby="nameHelp" placeholder="Enter Last Name">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-6 col-md-6 col-sm-12">
                    <label for="exampleInputUsername">Username</label>
                    <input type="text" name='username' class="form-control" id="exampleInputUsername" aria-describedby="usernameHelp" placeholder="Enter Username">
                </div>
                <div class="form-group col-lg-6 col-md-6 col-sm-12">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" name='email' class="form-control" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Enter email">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-6 col-md-6 col-sm-12">
                    <label for="exampleInputPassword">Password</label>
                    <input type="password" name='password' class="form-control" id="exampleInputPassword" placeholder="Password">
                </div>
                <div class="form-group col-lg-6 col-md-6 col-sm-12">
                    <label for="exampleInputCPassword">Password</label>
                    <input type="password" name='cPassword' class="form-control" id="exampleInputCPassword" placeholder="Confirm Password">      
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>

<%- include('partials/footer');%>