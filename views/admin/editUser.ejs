<%- include('../partials/header'); %>
<%- include('../partials/adminNav'); %>


<div class="container p-3">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-8 col-md-10 col-sm-12">
            <form class="card" action="/admin/edit/id=<%= user._id %>" method="POST">
                <div class="card-body">
                    <h6 class="card-title text-muted">Edit User Details</h6>
                    <div class="row">
                        <div class="form-group col-lg-6 col-md-6 col-sm-12">
                            <label for="exampleInputFirstName">First Name</label>
                            <input type="text" name='firstName' class="form-control" id="exampleInput" value="<%= user.firstName %>" aria-describedby="nameHelp" placeholder="Enter First Name">
                        </div>
                        <div class="form-group col-lg-6 col-md-6 col-sm-12">
                            <label for="exampleInputLastName">Last Name</label>
                            <input type="text" name='lastName' class="form-control" id="exampleInput" value="<%= user.lastName %>" aria-describedby="nameHelp" placeholder="Enter Last Name">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-6 col-md-6 col-sm-12">
                            <label for="exampleInputUsername">Username</label>
                            <input type="text" name='username' class="form-control" id="exampleInputUsername" value="<%= user.username %>" aria-describedby="usernameHelp" placeholder="Enter Username">
                        </div>
                        <div class="form-group">
                            <label for="adminKey">Admin Key</label>
                            <input type="password" class="form-control" name="adminKey" placeholder="Admin Key" value='MyWeb' required>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a href="/admin/general" class="btn btn-light">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>


<%- include('../partials/footer'); %>